---
// MainLayout.astro - Main site layout with modern Tailwind navigation and footer
import { ClientRouter } from 'astro:transitions';
import BaseHead from '../components/BaseHead.astro';
import SchemaOrg from '../components/SchemaOrg.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';


interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title,
  description = "Languages 4 partners with Indigenous communities on custom language learning platforms. Affordable, fast, community-led language reclamation.",
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  tags
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <!-- ClientRouther for smooth page navigation (Astro's killer feature!) -->
  <ClientRouter />
  
  <!-- SEO Foundation - handles all meta tags, Open Graph, Twitter Cards, etc. -->
  <BaseHead 
    title={title}
    description={description}
    image={image}
    type={type}
    publishedTime={publishedTime}
    modifiedTime={modifiedTime}
    author={author}
    tags={tags}
  />

  <!-- Favicon -->
  <link rel="icon" href="/images/logo-sparrow-invert.svg" type="image/svg+xml" />
  
  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="Languages 4 RSS Feed" href="/rss.xml" />

  <!-- Adobe Fonts - Neue Kabel (your brand font) -->
  <link rel="stylesheet" href="https://use.typekit.net/zrh5nnx.css">

  <!-- Structured Data for Rich Snippets -->
  <SchemaOrg />

<style is:global>
@media print {
  @page {
    size: letter;
    margin: 0.5in;
  }
  
  body {
    background: white !important;
    color: black !important;
    margin: 0 !important;
    padding: 0 !important;
  }
  
  /* Hide the fixed right navigation specifically */
  nav.fixed,
  nav[class*="fixed"],
  #mobile-menu,
  #mobile-menu-button {
    display: none !important;
    visibility: hidden !important;
  }
  
  /* Hide hero section */
  body > section:first-of-type,
  main > section:first-of-type {
    display: none !important;
  }
  
  /* Hide footer */
  footer {
    display: none !important;
  }
  
  /* Hide sidebar (TOC, Popular Articles) */
  aside,
  .lg\:col-span-1 {
    display: none !important;
  }
  
  /* Hide elements after article content */
  h3:contains("Related"),
  div:has(> h3) {
    display: none !important;
  }
  
  /* Remove right padding that accounts for nav bar */
  main,
  section,
  body {
    padding-right: 0 !important;
    margin-right: 0 !important;
  }
  
  /* Full width article */
  article {
    width: 100% !important;
    max-width: 100% !important;
    margin: 0 !important;
    padding: 0.5in !important;
  }
  
  /* Typography */
  h1 { font-size: 20pt; font-weight: bold; margin-bottom: 0.5em; page-break-after: avoid; }
  h2 { font-size: 16pt; font-weight: bold; margin: 1em 0 0.3em; page-break-after: avoid; }
  h3 { font-size: 14pt; font-weight: bold; margin: 0.8em 0 0.3em; page-break-after: avoid; }
  p { font-size: 11pt; line-height: 1.5; margin-bottom: 0.8em; }
  time { font-size: 9pt; color: #666; }
  
  /* Hide "Related Articles" section specifically */
  article ~ * {
    display: none !important;
  }
}
</style>

</head>

<body class="font-sans text-body bg-background">
  <!-- Modern Tailwind Navigation Component -->
  <Navigation />

  <!-- Main Content Area -->
  <!-- Right padding accounts for fixed navigation (20 = 80px, 24 = 96px) -->
  <main class="pt-16 lg:pt-0 lg:pr-20 xl:pr-24 min-h-screen">
    <slot />
  </main>

  <!-- Modern Tailwind Footer Component -->
  <Footer />

<!-- Pagefind Search Script (only loads in production) -->
{import.meta.env.PROD && (
  <>
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
    <script is:inline src="/pagefind/pagefind-ui.js"></script>
  </>
)}

</body>
</html>
