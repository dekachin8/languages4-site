---
// MainLayout.astro - Main site layout with modern Tailwind navigation and footer
import { ClientRouter } from 'astro:transitions';
import BaseHead from '../components/BaseHead.astro';
import SchemaOrg from '../components/SchemaOrg.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  tags?: string[];
}

const {
  title,
  description = "Languages 4 partners with Indigenous communities on custom language learning platforms. Affordable, fast, community-led language reclamation.",
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  tags
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <!-- ClientRouther for smooth page navigation (Astro's killer feature!) -->
  <ClientRouter />
  
  <!-- SEO Foundation - handles all meta tags, Open Graph, Twitter Cards, etc. -->
  <BaseHead 
    title={title}
    description={description}
    image={image}
    type={type}
    publishedTime={publishedTime}
    modifiedTime={modifiedTime}
    author={author}
    tags={tags}
  />
  
  <!-- RSS Feed -->
  <link rel="alternate" type="application/rss+xml" title="Languages 4 RSS Feed" href="/rss.xml" />

  <!-- Adobe Fonts - Neue Kabel (your brand font) -->
  <link rel="stylesheet" href="https://use.typekit.net/zrh5nnx.css">

  <!-- Structured Data for Rich Snippets -->
  <SchemaOrg />
</head>

<body class="font-sans text-body bg-background">
  <!-- Modern Tailwind Navigation Component -->
  <Navigation />

  <!-- Main Content Area -->
  <!-- Right padding accounts for fixed navigation (20 = 80px, 24 = 96px) -->
  <main class="pr-20 md:pr-24 min-h-screen">
    <slot />
  </main>

  <!-- Modern Tailwind Footer Component -->
  <Footer />

<!-- Pagefind Search Script (only loads in production) -->
{import.meta.env.PROD && (
  <>
    <link href="/pagefind/pagefind-ui.css" rel="stylesheet">
    <script is:inline src="/pagefind/pagefind-ui.js"></script>
  </>
)}

</body>
</html>
