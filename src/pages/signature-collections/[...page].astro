---
// src/pages/signature-collections/[...page].astro - Collections with pagination and tag filtering
import type { GetStaticPaths, Page } from 'astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import Sidebar from '../../components/Sidebar.astro';
import TagFilter from '../../components/TagFilter.astro';
import { filterByTag, getAllTagsWithCounts } from '../../utils/tagFilter';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  // Get all published collections
  const allCollections = await getCollection('signature-collections', ({ data }) => {
    return data.draft !== true;
  });
  
  // Sort by series and order
  const sortedCollections = allCollections.sort((a, b) => {
    // First sort by series title
    const seriesCompare = (a.data.seriesTitle || '').localeCompare(b.data.seriesTitle || '');
    if (seriesCompare !== 0) return seriesCompare;
    // Then by order within series
    return (a.data.seriesOrder || 0) - (b.data.seriesOrder || 0);
  });
  
  // Get all tags with counts
  const allTagsWithCounts = getAllTagsWithCounts(sortedCollections);
  
  // Paginate all collections (filtering happens client-side via URL params)
  return paginate(sortedCollections, {
    pageSize: 12,
    props: {
      allTags: allTagsWithCounts
    }
  });
};

type Props = {
  page: Page<CollectionEntry<'signature-collections'>>;
  allTags: Array<{ tag: string; count: number }>;
};

const { page, allTags } = Astro.props;

// Get tag from URL query parameter
const activeTag = Astro.url.searchParams.get('tag');

// Filter collections by active tag if present
const displayCollections = activeTag 
  ? filterByTag(page.data, activeTag)
  : page.data;

// Get popular collections for sidebar
const allCollectionsForSidebar = await getCollection('signature-collections', ({ data }) => data.draft !== true);
const popularCollections = allCollectionsForSidebar
  .filter(post => post.data.featured)
  .slice(0, 3)
  .map(post => ({
    title: post.data.title,
    slug: post.slug,
    heroImage: post.data.heroImage,
    collection: 'signature-collections' as const,
  }));

const pageTitle = activeTag 
  ? `Signature Collections - ${activeTag}` 
  : 'Signature Collections';

const pageDescription = activeTag
  ? `Multi-part series about ${activeTag} - Deep dives into Indigenous language reclamation`
  : 'In-depth multi-part series exploring Indigenous language reclamation, technology, and cultural practices';
---

<MainLayout title={pageTitle} description={pageDescription}>

<!-- Hero Section -->
<section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden pr-20 md:pr-24">
  <div class="absolute inset-0 z-0">
    <img 
      src="/images/signature-collections/signature-collections-hero.webp" 
      alt="Signature Collections"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-primary-900/70"></div>
  </div>
  
  <div class="relative z-10 max-w-5xl mx-auto px-8 py-16 text-center">
    <h1 class="font-display text-4xl md:text-5xl font-bold text-white mb-4 leading-tight border-b-4 border-white pb-4 inline-block">
      Signature Collections
    </h1>
    <p class="text-xl md:text-2xl text-white uppercase tracking-wide leading-relaxed font-semibold mt-6">
      In-Depth Multi-Part Series on Indigenous Language Reclamation
    </p>
    {activeTag && (
      <p class="text-lg text-accent-400 mt-4 font-semibold">
        Filtered by: {activeTag}
      </p>
    )}
  </div>
</section>

<!-- Main Content -->
<section class="bg-neutral-50 py-12 pr-20 md:pr-24">
  <div class="max-w-7xl mx-auto px-8">
    
    <!-- Info Box -->
    <div class="bg-white rounded-lg p-6 shadow-md border-l-4 border-accent-600 mb-8">
      <h2 class="font-display text-2xl font-bold text-primary-900 mb-2">Welcome to Signature Collections</h2>
      <p class="text-neutral-700 leading-relaxed">
        {activeTag 
          ? `Explore multi-part series about ${activeTag}. Click "Clear Filter" to see all series.`
          : 'Explore comprehensive multi-part series diving deep into specific topics in Indigenous language preservation.'
        }
      </p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-12">
      
      <!-- Main Content (2 columns) -->
      <div class="lg:col-span-2">
        
        <!-- Results Count -->
        {activeTag && (
          <div class="mb-6 text-neutral-600">
            <p class="font-semibold">
              {displayCollections.length} {displayCollections.length === 1 ? 'article' : 'articles'} found
            </p>
          </div>
        )}
        
        <!-- Collections Grid -->
        {displayCollections.length > 0 ? (
          <div class="grid md:grid-cols-2 gap-8 mb-12">
            {displayCollections.map((post) => (
              <ArticleCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                heroImage={post.data.heroImage}
                heroImageAlt={post.data.heroImageAlt}
                cardImage={post.data.cardImage}
                cardImageAlt={post.data.cardImageAlt}
                slug={post.slug}
                author={post.data.author}
                tags={post.data.tags}
                collection="signature-collections"
                seriesTitle={post.data.seriesTitle}
                seriesOrder={post.data.seriesOrder}
              />
            ))}
          </div>
        ) : (
          <div class="bg-white rounded-lg p-12 text-center shadow-md">
            <svg class="w-16 h-16 mx-auto text-neutral-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="font-display text-2xl font-bold text-neutral-700 mb-2">No Series Found</h3>
            <p class="text-neutral-600 mb-6">
              No series match the tag "{activeTag}". Try a different tag or clear the filter.
            </p>
            <a 
              href="/signature-collections"
              class="inline-block px-6 py-3 bg-accent-600 text-white font-semibold rounded-lg hover:bg-accent-700 transition-colors"
            >
              View All Series
            </a>
          </div>
        )}
        
        <!-- Pagination (only show if we have results and more than one page) -->
        {!activeTag && displayCollections.length > 0 && (page.lastPage > 1) && (
          <nav class="flex justify-center items-center gap-2" aria-label="Pagination">
            {page.url.prev && (
              <a 
                href={page.url.prev}
                class="px-4 py-2 bg-white border-2 border-neutral-300 text-neutral-700 rounded-lg hover:border-accent-600 hover:text-accent-600 transition-colors font-semibold"
              >
                ← Previous
              </a>
            )}
            
            {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => (
              <a
                href={pageNum === 1 ? '/signature-collections' : `/signature-collections/${pageNum}`}
                class:list={[
                  "px-4 py-2 rounded-lg font-semibold transition-colors",
                  pageNum === page.currentPage
                    ? "bg-accent-600 text-white"
                    : "bg-white border-2 border-neutral-300 text-neutral-700 hover:border-accent-600 hover:text-accent-600"
                ]}
                aria-current={pageNum === page.currentPage ? 'page' : undefined}
              >
                {pageNum}
              </a>
            ))}
            
            {page.url.next && (
              <a 
                href={page.url.next}
                class="px-4 py-2 bg-white border-2 border-neutral-300 text-neutral-700 rounded-lg hover:border-accent-600 hover:text-accent-600 transition-colors font-semibold"
              >
                Next →
              </a>
            )}
          </nav>
        )}
        
      </div>
      
      <!-- Sidebar (1 column) -->
      <div class="lg:col-span-1">
        <Sidebar 
          popularArticles={popularCollections}
          tags={allTags}
          collection="signature-collections"
        />
      </div>
      
    </div>
    
  </div>
</section>

</MainLayout>