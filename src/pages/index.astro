<script>
  // Robust modal trigger attachment
  function attachModalTriggers() {
    // Wait a moment for DOM to settle
    setTimeout(() => {
      const triggers = document.querySelectorAll('[data-modal-open]');
            
      triggers.forEach(trigger => {
        const modalId = trigger.getAttribute('data-modal-open');
        if (!modalId) return;
        
        // Create new handler function
        const clickHandler = (e) => {
          e.preventDefault();
          e.stopPropagation();
                    
          const openFn = window[`open_${modalId}`];
          if (openFn) {
            openFn();
          } else {
            console.error('Function not found:', `open_${modalId}`);
          }
        };
        
        // Remove old listeners and add new one
        trigger.removeEventListener('click', clickHandler);
        trigger.addEventListener('click', clickHandler);
      });
    }, 100);
  }

  // Attach on initial load
  attachModalTriggers();
  
  // Re-attach after every navigation
  document.addEventListener('astro:page-load', () => {
    attachModalTriggers();
  });
  
  // Also after DOM changes
  document.addEventListener('astro:after-swap', () => {
    attachModalTriggers();
  });
</script>

