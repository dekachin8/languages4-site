<!-- Mission Section -->
<section style="background: white; padding: 4rem 0;">
  <div class="container">
    <h2 style="font-size: 2.5rem; text-align: center; margin-bottom: 2rem; font-family: 'Neue Kabel', sans-serif; color: var(--color-primary);">Our Approach</h2>
    <p style="text-align: center; font-size: 1.25rem; max-width: 800px; margin: 0 auto; color: #666; line-height: 1.8;">
      Languages 4 respects language sovereignty and builds partnerships with Tribal Nations to develop affordable, effective language learning platforms.
    </p>
  </div>
</section>

<!-- Load the random image script -->
<ShowcaseLoader />

</MainLayout>