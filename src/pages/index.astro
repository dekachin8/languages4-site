<!-- Device Showcase - 4x3 Grid (optimized, some positions removed) -->
    <div class="device-showcase">
      
 <!-- ROW 1: Top row (now has HERO4 in center) -->
      <div class="showcase-row">
        <div class="device row-1-img-1">
          <img src="/images/showcase/random/salmon_stream_1923.webp" alt="Traditional practices" />
        </div>
        <div class="device hero-4">
          <img 
            src="/images/showcase/fixed/ladies_haka.webp" 
            alt="Haka cultural practice - HERO"
          />
        </div>
        <div class="device row-1-img-3">
          <img src="/images/showcase/random/wild_ricing.webp" alt="Wild ricing tradition" />
        </div>
      </div>

      <!-- ROW 2: MAIN ROW (tallest - HERO1, narrow random, HERO3) -->
      <div class="showcase-row">
        <div class="device hero-1">
          <img 
            src="/images/showcase/fixed/laptop+mobile+mohawk.webp" 
            alt="Language learning on multiple devices - HERO"
          />
        </div>
        <div class="device row-2-img-2">
          <img src="/images/showcase/random/Laptop+Mobile+software.webp" alt="Language software" />
        </div>
        <div class="device hero-3">
          <img 
            src="/images/showcase/fixed/indigenous_student_learning_mobilephone.webp" 
            alt="Student using language software - HERO"
          />
        </div>
      </div>

      <!-- ROW 3: Medium row (contains HERO2 - lady with hat center) -->
      <div class="showcase-row">
        <div class="device row-3-img-1">
          <img src="/images/showcase/random/Teacher_holding_tablet_w_software.webp" alt="Teacher with tablet" />
        </div>
        <div class="device hero-2">
          <img 
            src="/images/showcase/fixed/Indigenous_woman_inHat_sofware.webp" 
            alt="Indigenous woman with tablet - MAIN HERO"
          />
        </div>
        <div class="device row-3-img-3">
          <img src="/images/showcase/random/two_girls_back_to_school.webp" alt="Students learning" />
        </div>
      </div>

      <!-- ROW 4: Bottom row (2 images only - R4/C3 deleted) -->
      <div class="showcase-row">
        <div class="device row-4-img-1">
          <img src="/images/showcase/random/ladies_haka.webp" alt="Cultural practice" />
        </div>
        <div class="device row-4-img-2">
          <img src="/images/showcase/random/elder_nativewoman_smiling.webp" alt="Elder language keeper" />
