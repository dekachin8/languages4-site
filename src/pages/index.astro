<script>
  function reinitializeModals() {
    const modalIds = ['mohawk-modal', 'woman-modal', 'student-modal', 'haka-modal'];
    
    modalIds.forEach(modalId => {
      const modal = document.getElementById(modalId);
      if (!modal) {
        console.error('Modal not found:', modalId);
        return;
      }

      const closeBtn = modal.querySelector('.modal-close-btn');

      // Create fresh open function
      function openModal() {
        modal.classList.remove('hidden');
        modal.classList.add('flex');
        modal.setAttribute('aria-hidden', 'false');
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
        
      }

      // Create fresh close function
      function closeModal() {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        modal.setAttribute('aria-hidden', 'true');
        modal.style.display = '';
        document.body.style.overflow = '';
      }

      // Re-attach event listeners
      if (closeBtn) {
        const newCloseBtn = closeBtn.cloneNode(true);
        closeBtn.parentNode.replaceChild(newCloseBtn, closeBtn);
        newCloseBtn.addEventListener('click', closeModal);
      }

      modal.addEventListener('click', (e) => {
        if (e.target === modal) closeModal();
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
          closeModal();
        }
      });

      // Replace global function
      window[`open_${modalId}`] = openModal;
      });
  }

  // Initialize on load
  reinitializeModals();
  
  // Re-initialize after navigation
  document.addEventListener('astro:page-load', reinitializeModals);
  document.addEventListener('astro:after-swap', () => {
    setTimeout(reinitializeModals, 150);
  });
</script>