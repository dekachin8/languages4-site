---
// src/pages/whatarel4/[...page].astro - Main blog with pagination and tag filtering
import type { GetStaticPaths, Page } from 'astro';
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import Sidebar from '../../components/Sidebar.astro';
import TagFilter from '../../components/TagFilter.astro';
import { filterByTag, getAllTagsWithCounts } from '../../utils/tagFilter';
import { groupByYear } from '../../utils/archiveUtils';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
  // Get all published posts
  const allPosts = await getCollection('whatarel4', ({ data }) => {
    return data.draft !== true;
  });
  
  // Sort by date (newest first)
  const sortedPosts = allPosts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  
  // Get all tags with counts
  const allTagsWithCounts = getAllTagsWithCounts(sortedPosts);
  
  // Paginate all posts (filtering happens client-side via URL params)
  return paginate(sortedPosts, {
    pageSize: 12,
    props: {
      allTags: allTagsWithCounts,
      allPostsSorted: sortedPosts // Pass all posts for sectioning
    }
  });
};

type Props = {
  page: Page<CollectionEntry<'whatarel4'>>;
  allTags: Array<{ tag: string; count: number }>;
  allPostsSorted: CollectionEntry<'whatarel4'>[];
};

const { page, allTags, allPostsSorted } = Astro.props;

// Get tag from URL query parameter
const activeTag = Astro.url.searchParams.get('tag');

// Filter posts by active tag if present
const displayPosts = activeTag 
  ? filterByTag(page.data, activeTag)
  : page.data;

// Split into sections (only on page 1, no tag filter)
const showSections = page.currentPage === 1 && !activeTag;
const latestPosts = showSections ? allPostsSorted.slice(0, 4) : [];
const remainingPosts = showSections 
  ? allPostsSorted.slice(4, 12).sort(() => Math.random() - 0.5) // Show articles 5-12 randomized
  : displayPosts;

// Get popular posts for sidebar (random selection)
const allPostsForSidebar = await getCollection('whatarel4', ({ data }) => data.draft !== true);

// Shuffle array for random selection
const shuffled = [...allPostsForSidebar].sort(() => Math.random() - 0.5);

const popularPosts = shuffled
  .slice(0, 3)
  .map(post => ({
    title: post.data.title,
    slug: post.slug,
    heroImage: post.data.heroImage,
    collection: 'whatarel4' as const,
  }));

// Get archive years with counts
const yearGroups = groupByYear(allPostsForSidebar);
const archiveYears = Array.from(yearGroups.entries())
  .map(([year, posts]) => ({ year, count: posts.length }))
  .sort((a, b) => b.year - a.year);

const pageTitle = activeTag 
  ? `What Are Languages 4? - ${activeTag}` 
  : 'What Are Languages 4?';

const pageDescription = activeTag
  ? `Articles about ${activeTag} - Indigenous language reclamation`
  : 'Explore articles about Indigenous language reclamation through storytelling and technology';
---

<MainLayout title={pageTitle} description={pageDescription}>

<!-- Hero Section -->
<section class="relative min-h-[40vh] flex items-center justify-center overflow-hidden pr-20 md:pr-24">
  <div class="absolute inset-0 z-0">
    <img 
      src="/images/whatarel4/whatarel4-hero.webp" 
      alt="What Are Languages 4?"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-primary-900/70"></div>
  </div>
  
  <div class="relative z-10 max-w-5xl mx-auto px-8 py-16 text-center">
    <h1 class="font-display text-4xl md:text-5xl font-bold text-white mb-4 leading-tight border-b-4 border-white pb-4 inline-block">
      What Are Languages 4?
    </h1>
    <p class="text-xl md:text-2xl text-white uppercase tracking-wide leading-relaxed font-semibold mt-6">
      Revitalizing Indigenous Languages Through Storytelling and Ceremonial Practices
    </p>
    {activeTag && (
      <p class="text-lg text-accent-400 mt-4 font-semibold">
        Filtered by: {activeTag}
      </p>
    )}
  </div>
</section>

<!-- Main Content -->
<section class="bg-neutral-50 py-12 pr-20 md:pr-24">
  <div class="max-w-7xl mx-auto px-8">
    
    <!-- Info Box -->
    <div class="bg-white rounded-lg p-6 shadow-md border-l-4 border-accent-600 mb-8">
      <h2 class="font-display text-2xl font-bold text-primary-900 mb-2">Welcome to the Languages 4 Blog</h2>
      <p class="text-neutral-700 leading-relaxed">
        {activeTag 
          ? `Discover articles about ${activeTag}. Click "Clear Filter" to see all articles.`
          : 'Discover stories of Indigenous language reclamation, innovative technology, and cultural preservation.'
        }
      </p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-12">
      
      <!-- Main Content (2 columns) -->
      <div class="lg:col-span-2">
            
        <!-- Results Count -->
        {activeTag && (
          <div class="mb-6 text-neutral-600">
            <p class="font-semibold">
              {displayPosts.length} {displayPosts.length === 1 ? 'article' : 'articles'} found
            </p>
          </div>
        )}
        
      <!-- Articles Container with Scale Compensation -->
      <div class="scale-80 origin-top-left" style="width: 100%;">
        
      <!-- Latest Articles Section (Page 1 only, no tag filter) -->
      {(showSections && latestPosts.length > 0) && (
        <div class="mb-12">
          <h2 class="font-display text-2xl font-bold text-primary-900 mb-6">Latest Articles</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {latestPosts.map((post) => (
              <ArticleCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                heroImage={post.data.heroImage}
                heroImageAlt={post.data.heroImageAlt}
                cardImage={post.data.cardImage}
                cardImageAlt={post.data.cardImageAlt}
                slug={post.slug}
                tags={post.data.tags}
                collection="whatarel4"
              />  
            ))}
          </div>
        </div>
      )}
      
      <!-- More Articles Section -->
      {remainingPosts.length > 0 && (
        <div class="mb-3">
          {showSections && <h2 class="font-display text-2xl font-bold text-primary-900 mb-6">More Articles</h2>}
          <div class="grid md:grid-cols-2 gap-6">
            {remainingPosts.map((post) => (
              <ArticleCard
                title={post.data.title}
                description={post.data.description}
                pubDate={post.data.pubDate}
                heroImage={post.data.heroImage}
                heroImageAlt={post.data.heroImageAlt}
                cardImage={post.data.cardImage}
                cardImageAlt={post.data.cardImageAlt}
                slug={post.slug}
                tags={post.data.tags}
                collection="whatarel4"
              />  
            ))}
          </div>
        </div>
      )}
      
    </div>
        
        <!-- No Results Message -->
        {displayPosts.length === 0 && (
          <div class="bg-white rounded-lg p-12 text-center shadow-md">
            <svg class="w-16 h-16 mx-auto text-neutral-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <h3 class="font-display text-2xl font-bold text-neutral-700 mb-2">No Articles Found</h3>
            <p class="text-neutral-600 mb-6">
              No articles match the tag "{activeTag}". Try a different tag or clear the filter.
            </p>
            <a 
              href="/whatarel4"
              class="inline-block px-6 py-3 bg-accent-600 text-white font-semibold rounded-lg hover:bg-accent-700 transition-colors"
            >
              View All Articles
            </a>
          </div>
        )}
        
        <!-- Pagination (only show if we have results and more than one page) -->
        {!activeTag && displayPosts.length > 0 && (page.lastPage > 1) && (
          <nav class="flex justify-center items-center gap-2" aria-label="Pagination">
            {page.url.prev && (
              <a 
                href={page.url.prev}
                class="px-4 py-2 bg-white border-2 border-neutral-300 text-neutral-700 rounded-lg hover:border-accent-600 hover:text-accent-600 transition-colors font-semibold"
              >
                ← Previous
              </a>
            )}
            
            {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => (
  
              <a href={pageNum === 1 ? '/whatarel4' : `/whatarel4/${pageNum}`}
                class:list={[
                  "px-4 py-2 rounded-lg font-semibold transition-colors",
                  pageNum === page.currentPage
                    ? "bg-accent-600 text-white"
                    : "bg-white border-2 border-neutral-300 text-neutral-700 hover:border-accent-600 hover:text-accent-600"
                ]}
                aria-current={pageNum === page.currentPage ? 'page' : undefined}
              >
                {pageNum}
              </a>
            ))}
            
            {page.url.next && (
              <a 
                href={page.url.next}
                class="px-4 py-2 bg-white border-2 border-neutral-300 text-neutral-700 rounded-lg hover:border-accent-600 hover:text-accent-600 transition-colors font-semibold"
              >
                Next →
              </a>
            )}
          </nav>
        )}
        
      </div>
      
      <!-- Sidebar (1 column) -->
      <div class="lg:col-span-1">
        <Sidebar 
          popularArticles={popularPosts}
          tags={allTags}
          collection="whatarel4"
          archiveYears={archiveYears}
        />
      </div>
      
    </div>
    
  </div>
</section>

</MainLayout>