  <!-- Copy Link -->
  <button 
    type="button"
    onclick="navigator.clipboard.writeText(window.location.href).then(() => { this.querySelector('svg').style.fill = '#C7522A'; setTimeout(() => { this.querySelector('svg').style.fill = ''; }, 2000); })"
    aria-label="Copy link to clipboard"
    class="text-primary-900 transition-all duration-brand hover:text-accent-600 hover:scale-110 cursor-pointer"
  >
