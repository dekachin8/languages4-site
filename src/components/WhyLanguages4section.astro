---
// WhyLanguages4Section.astro - Core values and mission-driven principles
// Showcases the philosophical foundation: Language Sovereignty, Innovation, Trustworthiness
---

<section class="relative py-16 md:py-24 bg-gradient-to-b from-neutral-50 to-white overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-primary-600 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-accent-600 rounded-full blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 md:px-8 lg:pr-24 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="font-display text-4xl md:text-5xl font-medium text-primary-900 mb-4">
        Why Languages 4?
      </h2>
      <p class="text-xl md:text-2xl text-neutral-700 max-w-3xl mx-auto">
        Core Values for Language Reclamation
      </p>
    </div>

    <!-- Three Core Values with Venn Diagram Visual -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-7xl mx-auto mb-16">
      
      <!-- Left: Venn Diagram Visual -->
      <div class="relative flex items-center justify-center lg:order-1">
        <!-- Venn Diagram SVG Container -->
        <div class="relative w-full max-w-md aspect-square">
          
          <!-- Top Circle: Language Sovereignty (Primary/Teal) -->
          <div class="absolute top-0 left-1/2 -translate-x-1/2 w-64 h-64 rounded-full bg-primary-600/20 border-4 border-primary-600 flex items-center justify-center backdrop-blur-sm transition-all duration-300 hover:bg-primary-600/30 hover:scale-105 z-10">
            <div class="text-center px-6">
              <div class="text-white font-display text-2xl font-bold mb-2">Language<br/>Sovereignty</div>
            </div>
          </div>

          <!-- Bottom Left Circle: Trustworthy (Green) -->
          <div class="absolute bottom-0 left-0 w-64 h-64 rounded-full bg-[#74a892]/20 border-4 border-[#74a892] flex items-center justify-center backdrop-blur-sm transition-all duration-300 hover:bg-[#74a892]/30 hover:scale-105 z-10">
            <div class="text-center px-6">
              <div class="text-[#74a892] font-display text-2xl font-bold">Trustworthy</div>
            </div>
          </div>

          <!-- Bottom Right Circle: Innovative (Orange/Accent) -->
          <div class="absolute bottom-0 right-0 w-64 h-64 rounded-full bg-accent-600/20 border-4 border-accent-600 flex items-center justify-center backdrop-blur-sm transition-all duration-300 hover:bg-accent-600/30 hover:scale-105 z-10">
            <div class="text-center px-6">
              <div class="text-accent-600 font-display text-2xl font-bold">Innovative</div>
            </div>
          </div>

          <!-- Center overlap area -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32 rounded-full bg-gradient-to-br from-primary-600/30 via-[#74a892]/30 to-accent-600/30 border-2 border-white/50 flex items-center justify-center backdrop-blur-md z-20">
            <svg class="w-16 h-16 text-primary-900" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
            </svg>
          </div>
        </div>
      </div>

      <!-- Right: Three Value Cards -->
      <div class="space-y-6 lg:order-2">
        
        <!-- Language Sovereignty -->
        <div class="group relative bg-white rounded-xl p-6 shadow-[0_10px_40px_rgba(0,0,0,0.08)] border-l-4 border-primary-600 transition-all duration-300 hover:shadow-[0_15px_50px_rgba(0,0,0,0.12)] hover:-translate-x-2">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-primary-600 rounded-xl flex items-center justify-center flex-shrink-0 shadow-brand">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-xl font-bold text-primary-900 mb-2">Language Sovereignty</h3>
              <p class="text-neutral-700 leading-relaxed">
                Languages 4™ supports all trademarks & property rights, control of content access, and all benefits—including sales and financial benefits—for the community.
              </p>
            </div>
          </div>
        </div>

        <!-- Innovation -->
        <div class="group relative bg-white rounded-xl p-6 shadow-[0_10px_40px_rgba(0,0,0,0.08)] border-l-4 border-accent-600 transition-all duration-300 hover:shadow-[0_15px_50px_rgba(0,0,0,0.12)] hover:-translate-x-2">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-accent-600 rounded-xl flex items-center justify-center flex-shrink-0 shadow-brand-orange">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-xl font-bold text-primary-900 mb-2">Innovation</h3>
              <p class="text-neutral-700 leading-relaxed">
                Languages 4™ is committed to improving the instruction of Indigenous languages through innovation and research.
              </p>
            </div>
          </div>
        </div>

        <!-- Trustworthiness -->
        <div class="group relative bg-white rounded-xl p-6 shadow-[0_10px_40px_rgba(0,0,0,0.08)] border-l-4 border-[#74a892] transition-all duration-300 hover:shadow-[0_15px_50px_rgba(0,0,0,0.12)] hover:-translate-x-2">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-[#74a892] rounded-xl flex items-center justify-center flex-shrink-0 shadow-brand">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-xl font-bold text-primary-900 mb-2">Trustworthiness</h3>
              <p class="text-neutral-700 leading-relaxed">
                Languages 4™ commits to fostering trust through transparent communication, realistic goals, and integrity in all our partnerships.
              </p>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Partnership Commitment Banner -->
    <div class="max-w-5xl mx-auto">
      <div class="bg-gradient-to-r from-primary-900 via-primary-800 to-primary-900 rounded-2xl p-8 md:p-12 text-center shadow-brand-teal relative overflow-hidden">
        <!-- Decorative elements -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-accent-600/10 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-[#74a892]/10 rounded-full blur-3xl"></div>
        
        <div class="relative z-10">
          <h3 class="font-display text-2xl md:text-3xl font-semibold text-white mb-4">
            Respecting Language Sovereignty
          </h3>
          <p class="text-white/90 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed mb-8">
            Languages 4 respects language sovereignty and builds partnerships with Tribal Nations to develop affordable, effective language learning platforms.
          </p>
          
          <!-- Download Button -->
          <button
            id="download-values-btn"
            class="inline-flex items-center gap-3 py-4 px-8 bg-white text-primary-900 rounded-lg font-bold text-lg transition-all duration-300 hover:bg-neutral-100 hover:-translate-y-1 hover:shadow-xl"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            Download Our Core Values Guide
          </button>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- Download Modal -->
<div id="download-modal" class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[9999] hidden items-center justify-center p-4">
  <div class="bg-white rounded-2xl shadow-2xl max-w-md w-full p-8 relative animate-modal">
    <!-- Close button -->
    <button
      id="close-modal-btn"
      class="absolute top-4 right-4 text-neutral-400 hover:text-neutral-600 transition-colors"
      aria-label="Close"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Modal content -->
    <div class="text-center mb-6">
      <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <h3 class="font-display text-2xl font-bold text-primary-900 mb-2">
        Download Core Values Guide
      </h3>
      <p class="text-neutral-600">
        Enter your email to receive the PDF and stay updated on language reclamation resources.
      </p>
    </div>

    <!-- Netlify Form -->
    <form
      name="core-values-download"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      id="download-form"
      class="space-y-4"
    >
      <!-- Netlify form detection -->
      <input type="hidden" name="form-name" value="core-values-download" />
      
      <!-- Honeypot for spam -->
      <p class="hidden">
        <label>
          Don't fill this out if you're human: <input name="bot-field" />
        </label>
      </p>

      <!-- Name field -->
      <div>
        <label for="download-name" class="block text-sm font-semibold text-neutral-700 mb-2">
          Name
        </label>
        <input
          type="text"
          id="download-name"
          name="name"
          required
          class="w-full px-4 py-3 border-2 border-neutral-300 rounded-lg focus:border-primary-600 focus:outline-none transition-colors"
          placeholder="Your name"
        />
      </div>

      <!-- Email field -->
      <div>
        <label for="download-email" class="block text-sm font-semibold text-neutral-700 mb-2">
          Email Address *
        </label>
        <input
          type="email"
          id="download-email"
          name="email"
          required
          class="w-full px-4 py-3 border-2 border-neutral-300 rounded-lg focus:border-primary-600 focus:outline-none transition-colors"
          placeholder="your@email.com"
        />
      </div>

      <!-- Organization field (optional) -->
      <div>
        <label for="download-organization" class="block text-sm font-semibold text-neutral-700 mb-2">
          Organization (Optional)
        </label>
        <input
          type="text"
          id="download-organization"
          name="organization"
          class="w-full px-4 py-3 border-2 border-neutral-300 rounded-lg focus:border-primary-600 focus:outline-none transition-colors"
          placeholder="Your organization or community"
        />
      </div>

      <!-- Submit button -->
      <button
        type="submit"
        class="w-full py-4 bg-accent-600 text-white rounded-lg font-bold text-lg transition-all duration-300 hover:bg-accent-700 hover:shadow-lg"
      >
        Download PDF
      </button>

      <p class="text-xs text-neutral-500 text-center">
        We respect your privacy. Your information will only be used to share language reclamation resources.
      </p>
    </form>

    <!-- Success message (hidden by default) -->
    <div id="download-success" class="hidden text-center">
      <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      <h3 class="font-display text-2xl font-bold text-primary-900 mb-2">
        Download Started!
      </h3>
      <p class="text-neutral-600 mb-6">
        Your PDF is downloading now. Check your email for future updates on language reclamation resources.
      </p>
      <button
        id="close-success-btn"
        class="py-3 px-8 bg-primary-600 text-white rounded-lg font-semibold transition-all duration-300 hover:bg-primary-700"
      >
        Close
      </button>
    </div>
  </div>
</div>

<script>
  const modal = document.getElementById('download-modal');
  const downloadBtn = document.getElementById('download-values-btn');
  const closeBtn = document.getElementById('close-modal-btn');
  const downloadForm = document.getElementById('download-form');
  const successDiv = document.getElementById('download-success');
  const closeSuccessBtn = document.getElementById('close-success-btn');

  // Open modal
  downloadBtn?.addEventListener('click', () => {
    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
  });

  // Close modal
  function closeModal() {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
    // Reset form
    downloadForm?.reset();
    downloadForm?.classList.remove('hidden');
    successDiv?.classList.add('hidden');
  }

  closeBtn?.addEventListener('click', closeModal);
  closeSuccessBtn?.addEventListener('click', closeModal);

  // Close on background click
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  // Handle form submission
  downloadForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(downloadForm);

    try {
      // Submit to Netlify
      await fetch('/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams(formData as any).toString()
      });

      // Hide form, show success
      downloadForm.classList.add('hidden');
      successDiv?.classList.remove('hidden');

      // Trigger PDF download
      const link = document.createElement('a');
      link.href = '/documents/Languages4_Core_Values.pdf';
      link.download = 'Languages4_Core_Values.pdf';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);

      // Auto-close after 3 seconds
      setTimeout(closeModal, 3000);

    } catch (error) {
      console.error('Form submission error:', error);
      alert('There was an error. Please try again or contact us directly.');
    }
  });

  // Re-initialize after View Transitions
  document.addEventListener('astro:after-swap', () => {
    // Re-attach event listeners if needed
  });
</script>

<style>
  @keyframes modal {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .animate-modal {
    animation: modal 0.3s ease-out;
  }
</style>

<style>
  /* Venn diagram circles have subtle animation on hover */
  @keyframes pulse-soft {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }
</style>