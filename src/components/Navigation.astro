<!-- JavaScript for Menu Toggle & Hamburger Animation -->
<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const closeButton = document.getElementById('close-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  function openMenu() {
    if (mobileMenu && menuButton) {
      mobileMenu.style.transform = 'translateX(0)';
      mobileMenu.setAttribute('aria-hidden', 'false');
      menuButton.setAttribute('aria-expanded', 'true');
    }
  }

  function closeMenu() {
    if (mobileMenu && menuButton) {
      mobileMenu.style.transform = 'translateX(100%)';
      mobileMenu.setAttribute('aria-hidden', 'true');
      menuButton.setAttribute('aria-expanded', 'false');
    }
  }

  // Toggle menu (open if closed, close if open)
  if (menuButton) {
    menuButton.addEventListener('click', () => {
      const isOpen = mobileMenu?.style.transform === 'translateX(0px)';
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });
  }

  // Close menu
  if (closeButton) {
    closeButton.addEventListener('click', closeMenu);
  }

  // Close menu when clicking a link (always close, even if same page)
  const menuLinks = document.querySelectorAll('.menu-link');
  menuLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      closeMenu();
    });
  });

  // Close menu on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      const isOpen = mobileMenu?.style.transform === 'translateX(0px)';
      if (isOpen) {
        closeMenu();
      }
    }
  });

  // Close menu when clicking outside of it
  document.addEventListener('click', (e) => {
    const isOpen = mobileMenu?.style.transform === 'translateX(0px)';
    if (isOpen && mobileMenu && !mobileMenu.contains(e.target) && e.target !== menuButton && !menuButton?.contains(e.target)) {
      closeMenu();
    }
  });
</script>

<style>
  /* Hamburger button triple-pulse animation with 5-second pause */
  .hamburger-menu {
    animation: triple-pulse 7s ease-in-out infinite;
  }

  @keyframes triple-pulse {
    0%, 100% {
      transform: scale(1);
    }
    /* First pulse */
    5% {
      transform: scale(1.1);
    }
    10% {
      transform: scale(1);
    }
    /* Second pulse */
    15% {
      transform: scale(1.1);
    }
    20% {
      transform: scale(1);
    }
    /* Third pulse */
    25% {
      transform: scale(1.1);
    }
    30% {
      transform: scale(1);
    }
    /* Wait 5 seconds (30% to 100% = ~5 seconds of 7-second cycle) */
  }

  /* Hover effect removes animation */
  .hamburger-menu:hover {
    animation: none;
  }

  /* Menu link entrance animation */
  .menu-link {
    animation: slideInRight 0.4s ease-out backwards;
  }

  .menu-link:nth-child(1) { animation-delay: 0.1s; }
  .menu-link:nth-child(2) { animation-delay: 0.15s; }
  .menu-link:nth-child(3) { animation-delay: 0.2s; }
  .menu-link:nth-child(4) { animation-delay: 0.25s; }
  .menu-link:nth-child(5) { animation-delay: 0.3s; }
  .menu-link:nth-child(6) { animation-delay: 0.35s; }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
